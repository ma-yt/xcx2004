<!--pages/cart/cart.wxml-->
<view class="page-box">
  <!-- 头部开始  -->
  <view class="cart-top">
    <view class="top-left">共x件商品</view>
    <view class="top-right">删除</view>
  </view>
  <!-- 头部结束 -->   

  <!-- 列表开始 -->
  <view class="item-list">
    <view class="item" wx:for="{{list}}" wx:key="*this">
      <checkbox-group bindchange="checkboxChange">
        <label class="checkbox">
          <checkbox value="1" checked="{{item.checked}}"> </checkbox>
        </label>
      </checkbox-group>
      <view class="pic">
        <image src="//img11.360buyimg.com/n7/jfs/t1/121074/1/16465/121137/5f97b38cEd8f11274/9ab05f914ad14eba.jpg"></image>
      </view>
      <view class="content">
        <view class="title">{{item.goods_name}}</view>
        <view class="desc">品牌:iphone</view>
        <view class="price-info">
          <view class="price">${{item.cart_price}}</view>
          <view class="number">
            <view class="decr">-</view>
            <input value="{{item.goods_number}}"></input>
            <view class="incr">+</view>
          </view>
        </view>
      </view>
    </view>
  </view>
  <!-- 列表结束 -->

  <!-- 底部结算 开始 -->
  <view class="total-box">
    <view class="all">
      <checkbox-group bindchange="selectAll">
        <checkbox value="1" checked="{{isSelectAll}}"  />
        <text>全选</text>
      </checkbox-group>
    </view>
    <view class="total-price">
      总价：
      <text class="price">${{totalAmount}}</text>
    </view>
    <view class="btn btn-default">去结算</view>
  </view>
  <!-- 底部结算 结束 -->
</view>
